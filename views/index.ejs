<script>
  $(function() {
    if (localStorage.lastVisit) {
      var lastVisit = new Date(Date.parse(localStorage.lastVisit));
      $('#intro').append('You last visited this site on ' + inspect(lastVisit));
    } else {
      $('#intro').append('This appears to be your first visit to this page.');
    }
    localStorage.lastVisit = (new Date()).toUTCString();  
  });
</script>